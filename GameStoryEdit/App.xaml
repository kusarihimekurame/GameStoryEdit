<Application x:Class="GameStoryEdit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameStoryEdit"
             Startup="Application_Startup"
             Activated="Application_Activated"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Language\en-US.xaml"/>
                <ResourceDictionary Source="Language\zh-CN.xaml"/>
                <ResourceDictionary Source="Language\ja-JP.xaml"/>
                <ResourceDictionary Source="Language\Languages.xaml"/>
                <ResourceDictionary Source="Commands\Command.xaml"/>
                <ResourceDictionary Source="Style\MenuItem.xaml"/>
                <ResourceDictionary Source="Style\Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
